<p id="notice"><%= notice %></p>

<h1>Listing Amplifiers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amplifiers.each do |amplifier| %>
      <tr>
        <td><%= amplifier.name %></td>
        <td><%= amplifier.price %></td>
        <td><%= link_to 'Show', amplifier %></td>
        <td><%= link_to 'Edit', edit_amplifier_path(amplifier) %></td>
        <td><%= link_to 'Destroy', amplifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

