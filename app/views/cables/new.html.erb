<h1>New Cable</h1>

<%= form_for(@cable) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :id %><br />
    <%= f.text_field :code, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :type %><br />
    <%= f.text_field :cabletype, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: "150", rows: "10" %>
  </div>

  <%= f.submit %>
<% end %>
