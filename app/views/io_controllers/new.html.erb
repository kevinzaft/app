<h1>New I/O Controller</h1>

<%= form_for(@io_controller) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :id %><br />
    <%= f.text_field :code, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label "Model" %><br />
    <%= f.text_field :iomodel, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :spec %><br />
    <%= f.text_area :spec, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :dimensions %><br />
    <%= f.text_field :dimensions, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :requirements %><br />
    <%= f.text_area :requirements, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :other %><br />
    <%= f.text_area :other, cols: "150", rows: "10" %>
  </div>

  <%= f.submit %>
<% end %>
