<p id="notice"><%= notice %></p>

<h1>Listing Network Adapters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @network_adapters.each do |network_adapter| %>
      <tr>
        <td><%= network_adapter.name %></td>
        <td><%= network_adapter.price %></td>
        <td><%= link_to 'Show', network_adapter %></td>
        <td><%= link_to 'Edit', edit_network_adapter_path(network_adapter) %></td>
        <td><%= link_to 'Destroy', network_adapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Network adapter', new_network_adapter_path %>
