<h1>Edit</h1>

<%= form_for(@hard_drive) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :id %><br />
    <%= f.text_field :code, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :type %><br />
    <%= f.text_field :drivetype, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :dimensions %><br />
    <%= f.text_area :dimensions, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_area :weight, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :interface %><br />
    <%= f.text_area :interface, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :texture %><br />
    <%= f.text_field :texture, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :warranty %><br />
    <%= f.text_field :warranty, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :voltage %><br />
    <%= f.text_field :voltage, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :requirements %><br />
    <%= f.text_area :requirements, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :accessories %><br />
    <%= f.text_area :accessories, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :opt_temp %><br />
    <%= f.text_field :temperature, cols: "150", rows: "10" %>
  </div>

  <%= f.submit %>
<% end %>
