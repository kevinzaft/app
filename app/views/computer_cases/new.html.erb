<h1>New Computer</h1>

<%= form_for(@computer_case) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :id %><br />
    <%= f.text_field :code, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :type %><br />
    <%= f.text_field :casetype, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :case_model %><br />
    <%= f.text_field :casemodel, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label "Compatible Motherboards" %><br />
    <%= f.text_field :motherboard, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :material %><br />
    <%= f.text_field :material, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label "Drive Bays" %><br />
    <%= f.text_area :drivebay,  cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :expansion %><br />
    <%= f.text_field :expansion, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :dimensions %><br />
    <%= f.text_field :dimensions, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :thickness %><br />
    <%= f.text_field :thickness, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :iopanel %><br />
    <%= f.text_field :iopanel, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :cooling %><br />
    <%= f.text_area :cooling, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :power %><br />
    <%= f.text_area :power,  cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label "cpu compatibility" %><br />
    <%= f.text_field :cpucompatibility, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label "vga compatibility" %><br />
    <%= f.text_field :vgacompatibility, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :other %><br />
    <%= f.text_area :other, cols: "150", rows: "10" %>
  </div>

  <%= f.submit %>
<% end %>
