  <div class="field">
    <%= f.label :length %><br />
    <%= f.text_field :length, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :width %><br />
    <%= f.text_field :width, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :number_of_pins %><br />
