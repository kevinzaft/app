<h1>Edit</h1>

<%= form_for(@flash_digital) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :id %><br />
    <%= f.text_field :code, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand, :size => 150 %>
  </div>


  <div class="field">
    <%= f.label :type %><br />
    <%= f.text_field :storagetype, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :dimensions %><br />
    <%= f.text_field :dimensions, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :interface %><br />
    <%= f.text_field :interface, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :read_speed %><br />
    <%= f.text_field :readspeed, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :write_speed %><br />
    <%= f.text_field :writespeed, :size => 150 %>
  </div>


  <div class="field">
    <%= f.label :system_requirements %><br />
    <%= f.text_area :systemrequirements, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :warranty %><br />
    <%= f.text_area :warranty, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, cols: "150", rows: "10" %>
  </div>

  <%= f.submit %>
<% end %>
