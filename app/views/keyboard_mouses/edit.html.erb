<h1>Edit</h1>

<%= form_for(@keyboard_mouse) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :id %><br />
    <%= f.text_field :code, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand, :size => 150 %>
  </div>

  <div class="field">
    <%= f.label :product_model %><br />
    <%= f.text_field :productmodel, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :product_type %><br />
    <%= f.text_field :producttype, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :connection %><br />
    <%= f.text_field :connection, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :warranty %><br />
    <%= f.text_field :warranty, cols: "150", rows: "10" %>
  </div>

  <div class="field">
    <%= f.label :other %><br />
    <%= f.text_area :other, cols: "150", rows: "10" %>
  </div>

  <%= f.submit %>
<% end %>
